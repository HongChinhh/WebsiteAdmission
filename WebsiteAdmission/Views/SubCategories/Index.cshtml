@model PagedList.IPagedList<WebsiteAdmission.Models.SubCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@Html.Partial("~/Views/Shared/_Search.cshtml")
<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th class="text-center">
                <button id="btn_edit_position" class="btn btn-danger btn-sm" data-disabled="true">Bật Sửa Position</button>
            </th>
            <th></th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ParentCategory.NameParentCat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ViewName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.First().Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentCategory.NameParentCat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ViewName)
                </td>
                <td class="text-center">
                    @using (Html.BeginForm("ChangePositionValue", "SubCategories", FormMethod.Post, new { @class = "formChangePositionValue" }))
                    {
                        @Html.Hidden("SubCategoryID", item.SubCategoryID)
                        @Html.Hidden("Position", item.Position)
                    }
                    <button class="btn_up glyphicon glyphicon-circle-arrow-up btn btn-success btn-sm" disabled></button>
                    <button class="btn_down glyphicon glyphicon-circle-arrow-down btn btn-primary btn-sm" disabled></button>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SubCategoryID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SubCategoryID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SubCategoryID })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("~/Views/Shared/_Pagination.cshtml")
@section script {
    @Scripts.Render("~/Scripts/js/change-position")
}