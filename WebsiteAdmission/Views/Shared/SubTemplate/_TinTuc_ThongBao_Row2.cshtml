@model IEnumerable<WebsiteAdmission.Models.Post>
@using WebsiteAdmission.Common
@if (Model != null && Model.Count() > 0)
{
    int i = 0;
    <div class="row4">
        <div class="lienketdaihoc">
            <div class="title_lkdh">
                <p><b>@Model.FirstOrDefault().SubCategory.Name</b></p>
            </div>
            @foreach (var item in Model)
            {
                if (i++ == 3)
                {
                    break;
                }
            <div class="container1">
                <a href="@Url.Action("Detail", "Page", new { id = item.PostID })" class="clear_a">
                    <img src="@(Constants.ImagesPosts.GetDescription() + item.PostID + '/' + item.CoverImage)" alt="Cinque Terre" class="image">
                    <div class="topleft">@item.Title</div>
                </a>
                <div class="link_container1">
                    <a href="../pages/thongbaotuyensinh.html">CHI TIẾT </a>
                </div>
            </div>
            }
        </div>
    </div>
}