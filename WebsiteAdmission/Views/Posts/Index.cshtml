@model PagedList.IPagedList<WebsiteAdmission.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@Html.Partial("~/Views/Shared/_Search.cshtml")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().SubCategory.ParentCategory.NameParentCat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SubCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Title)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Body)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.CoverImage)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.First().Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CreatedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().PublishedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategory.ParentCategory.NameParentCat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.CoverImage)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PostID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PostID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PostID })
            </td>
        </tr>
    }

</table>
@Html.Partial("~/Views/Shared/_Pagination.cshtml")